    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run test:run --test-timeout=0 -t \"should offer a product with suppliers\"",
            "cwd": "${workspaceFolder}/packages/supplier",
            "showAsyncStacks": true,
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "name": "Debug React Client",
            "type": "chrome",
            "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",
            "request": "launch",
            "url": "http://localhost:3001",
            "sourceMaps": true,
            "smartStep": true,
            "webRoot": "${workspaceFolder}/../examples/react-client"
        }
    ]
}
