{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run test:run --test-timeout=0 -t \"should offer a product with suppliers\"",
            "cwd": "${workspaceFolder}/packages/supplier",
            "showAsyncStacks": true,
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "name": "Debug React Social App",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "sourceMaps": true,
            "smartStep": true,
            "webRoot": "${workspaceFolder}/packages/examples/react-social-app"
        }
    ]
}
